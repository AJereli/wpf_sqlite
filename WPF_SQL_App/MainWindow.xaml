<Window x:Class="WPF_SQL_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SQL_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="666" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Margin="1" Grid.Column="0" HorizontalContentAlignment="Center" Grid.Row="0" x:Name="uiLogin" Text="Test" />
        <PasswordBox Margin="1" Grid.Column="0" HorizontalContentAlignment="Center" Grid.Row="1" x:Name="uiPass" Password="password"/>
        <Button Margin="1" Grid.Column="0" Grid.Row="2" Name="loginBtn" Content="Login"  IsDefault="True" VerticalAlignment="Center"/>

    </Grid>
</Window>
